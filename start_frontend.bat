@echo off
echo Запуск фронтенда генератора прописей
echo ===============================================

cd %~dp0\frontend

echo Установка зависимостей фронтенда...
call npm install
if %ERRORLEVEL% NEQ 0 (
    echo Ошибка установки зависимостей фронтенда! 
    echo Проверьте, что Node.js и npm установлены правильно.
    pause
    exit /b 1
)

echo Запуск фронтенда...
call npm start

echo =============================================== 